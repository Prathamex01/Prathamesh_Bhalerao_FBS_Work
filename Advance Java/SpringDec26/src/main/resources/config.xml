<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:aop="http://www.springframework.org/schema/aop"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springfarmework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/aop
http://www.springframework.org/schema/aop/spring-aop.xsd">

<bean id="stud" class="com.spring.Student"></bean>
<bean id="service" class="com.spring.CheckValidity"></bean>

<aop:config>

<aop:aspect ref="service"> 


<aop:pointcut
expression="execution(* com.spring.*.takeExam(..))" id="pointCutId"/>

<aop:before method="hasPaid" pointcut-ref="pointCutId"/>
</aop:aspect>

 
</aop:config>
</beans>